/**index.wxss**/
/* 登录页面样式 - 温暖信任感设计 */
page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.login-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 60rpx;
  animation: fadeInDown 0.8s ease-out;
}

.logo-icon {
  width: 140rpx;
  height: 140rpx;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 30rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.logo-icon::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(45deg, transparent, rgba(255,255,255,0.3), transparent);
  transform: rotate(45deg);
  animation: shimmer 3s infinite;
}

.logo-icon text {
  font-size: 72rpx;
  z-index: 1;
}

.app-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.2);
}

.app-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 12rpx;
  letter-spacing: 2rpx;
}

/* 登录卡片 */
.login-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.2);
  animation: fadeInUp 0.8s ease-out 0.2s both;
  flex: 1;
}

/* 角色切换Tab */
.role-tabs {
  display: flex;
  background: #f5f7fa;
  border-radius: 20rpx;
  padding: 8rpx;
  margin-bottom: 50rpx;
}

.role-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: 500;
  color: #8b92a8;
  transition: all 0.3s ease;
  position: relative;
}

.role-tab.active {
  background: #ffffff;
  color: #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.25);
  font-weight: 600;
}

.role-tab-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

/* 表单区域 */
.form-section {
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 26rpx;
  color: #5a6270;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f8f9fc;
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.input-wrapper.focus {
  background: #ffffff;
  border-color: #667eea;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.15);
}

.input-wrapper.error {
  border-color: #ff6b6b;
  background: #fff5f5;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #8b92a8;
}

.input-wrapper.focus .input-icon {
  color: #667eea;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: #2d3748;
  height: 44rpx;
  line-height: 44rpx;
}

.input-field::placeholder {
  color: #a0aec0;
}

.password-toggle {
  padding: 10rpx;
  font-size: 32rpx;
  color: #8b92a8;
}

.error-tip {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
  margin-top: 20rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.3);
}

.login-btn.loading {
  opacity: 0.8;
}

/* 底部链接 */
.bottom-links {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.link-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 500;
  transition: all 0.3s ease;
}

.link-text:active {
  opacity: 0.7;
}

/* 装饰元素 */
.decorations {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: -1;
  overflow: hidden;
}

.decor-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.decor-circle-1 {
  width: 300rpx;
  height: 300rpx;
  top: 10%;
  left: -100rpx;
  animation: float 6s ease-in-out infinite;
}

.decor-circle-2 {
  width: 200rpx;
  height: 200rpx;
  top: 60%;
  right: -60rpx;
  animation: float 8s ease-in-out infinite 1s;
}

.decor-circle-3 {
  width: 150rpx;
  height: 150rpx;
  bottom: 20%;
  left: 10%;
  animation: float 7s ease-in-out infinite 0.5s;
}

/* 动画 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes shimmer {
  0% { transform: translateX(-100%) rotate(45deg); }
  100% { transform: translateX(100%) rotate(45deg); }
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-30rpx); }
}

/* 响应式适配 */
@media (min-height: 1000rpx) {
  .login-container {
    justify-content: center;
  }
  
  .logo-section {
    margin-bottom: 80rpx;
  }
}
