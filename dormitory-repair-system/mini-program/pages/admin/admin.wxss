/* Admin Homepage Styles - Professional Warm Theme */

.container {
  min-height: 100vh;
  background: #faf8f5;
  padding-bottom: 40rpx;
}

/* User Header - Admin style with deeper warm tones */
.user-header {
  background: linear-gradient(135deg, #c9b8a8 0%, #b8a594 100%);
  padding: 60rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.2);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #a08b7a 0%, #8b7355 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.3);
}

.avatar-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: 600;
}

.user-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #fff;
}

.user-role {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  background: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.25);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.logout-icon {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

/* Stats Section */
.stats-section {
  margin: 0 30rpx 30rpx;
}

.stats-card {
  background: linear-gradient(135deg, #fff 0%, #faf8f5 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.1);
  border: 2rpx solid #d4a574;
  position: relative;
}

.stats-card:active {
  transform: scale(0.99);
  opacity: 0.95;
}

.stats-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.stats-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  background: linear-gradient(135deg, #f5ebe0 0%, #ebe0d4 100%);
}

.stats-icon.pending {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
}

.stats-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.stats-number {
  font-size: 56rpx;
  font-weight: 700;
  color: #4a4035;
  line-height: 1;
}

.stats-label {
  font-size: 26rpx;
  color: #8b7355;
}

.stats-arrow {
  width: 60rpx;
  height: 60rpx;
  background: #f5f0eb;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.arrow-icon {
  font-size: 36rpx;
  color: #8b7355;
  font-weight: 300;
}

.stats-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

/* Section Common Styles */
.section {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #4a4035;
}

.title-icon {
  font-size: 36rpx;
}

/* Action Grid - 2x2 layout */
.action-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.action-item {
  background: #faf8f5;
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  transition: all 0.3s;
  border: 1rpx solid rgba(139, 115, 85, 0.08);
  position: relative;
}

.action-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.15);
}

.action-icon.pending {
  background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
}

.action-icon.completed {
  background: linear-gradient(135deg, #e8f5e9 0%, #c8e6c9 100%);
}

.action-icon.announcement {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
}

.action-icon.evaluation {
  background: linear-gradient(135deg, #fff8e1 0%, #ffecb3 100%);
}

.action-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a4035;
}

.action-badge {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  min-width: 36rpx;
  height: 36rpx;
  background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
  color: #fff;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 18rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

/* Tips Section */
.tips-section {
  margin: 0 30rpx;
}

.tips-card {
  background: linear-gradient(135deg, #f8f4f0 0%, #f0ebe5 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 6rpx solid #d4a574;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a4035;
  margin-bottom: 16rpx;
}

.tips-content {
  display: block;
  font-size: 26rpx;
  color: #6b5d4d;
  line-height: 1.6;
}