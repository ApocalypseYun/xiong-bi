/* Student Homepage Styles - Warm Minimalist */

.container {
  min-height: 100vh;
  background: #faf8f5;
  padding-bottom: 40rpx;
}

/* User Header - Soft gradient card */
.user-header {
  background: linear-gradient(135deg, #e8ddd4 0%, #d4c8bc 100%);
  padding: 60rpx 40rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(139, 115, 85, 0.15);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #c9b8a8 0%, #b8a594 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 115, 85, 0.2);
}

.avatar-text {
  font-size: 40rpx;
  color: #fff;
  font-weight: 600;
}

.user-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #4a4035;
}

.user-room {
  font-size: 26rpx;
  color: #6b5d4d;
  background: rgba(255, 255, 255, 0.5);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.logout-btn {
  background: rgba(255, 255, 255, 0.6);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
}

.logout-icon {
  font-size: 24rpx;
  color: #8b7355;
  font-weight: 500;
}

/* Section Common Styles */
.section {
  margin: 0 30rpx 30rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(139, 115, 85, 0.08);
}

.section-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #4a4035;
}

.title-icon {
  font-size: 36rpx;
}

/* Announcement Carousel */
.announcement-carousel {
  position: relative;
}

.swiper {
  height: 160rpx;
}

.announcement-item {
  background: linear-gradient(135deg, #f5f0eb 0%, #ebe4dc 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border: 1rpx solid rgba(139, 115, 85, 0.1);
}

.announcement-badge {
  align-self: flex-start;
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.announcement-title {
  font-size: 30rpx;
  color: #4a4035;
  font-weight: 600;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-date {
  font-size: 22rpx;
  color: #8b7355;
}

.swiper-dots {
  display: flex;
  justify-content: center;
  gap: 12rpx;
  margin-top: 16rpx;
}

.dot {
  width: 16rpx;
  height: 8rpx;
  background: #ddd5cc;
  border-radius: 4rpx;
  transition: all 0.3s;
}

.dot.active {
  width: 32rpx;
  background: #d4a574;
}

/* Action Grid */
.action-grid {
  display: flex;
  gap: 20rpx;
}

.action-item {
  flex: 1;
  background: #faf8f5;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s;
  border: 1rpx solid rgba(139, 115, 85, 0.08);
}

.action-item.primary {
  background: linear-gradient(135deg, #f5ebe0 0%, #ebe0d4 100%);
  border: 2rpx solid #d4a574;
}

.action-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  background: #fff;
  box-shadow: 0 4rpx 12rpx rgba(139, 115, 85, 0.15);
}

.action-item.primary .action-icon {
  background: linear-gradient(135deg, #d4a574 0%, #c9956b 100%);
  color: #fff;
}

.action-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #4a4035;
}

.action-desc {
  font-size: 22rpx;
  color: #8b7355;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  gap: 16rpx;
}

.empty-icon {
  font-size: 80rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* Tips Section */
.tips-section {
  margin: 0 30rpx;
}

.tips-card {
  background: linear-gradient(135deg, #f8f4f0 0%, #f0ebe5 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  border-left: 6rpx solid #d4a574;
}

.tips-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a4035;
  margin-bottom: 16rpx;
}

.tips-content {
  display: block;
  font-size: 26rpx;
  color: #6b5d4d;
  line-height: 1.6;
}
