page {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.forgot-container {
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-top: 20rpx;
}

.back-btn {
  width: 70rpx;
  height: 70rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #ffffff;
  backdrop-filter: blur(10rpx);
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
  margin-right: 70rpx;
}

/* 卡片 */
.forgot-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 40rpx;
  padding: 50rpx 40rpx;
  box-shadow: 0 30rpx 80rpx rgba(0, 0, 0, 0.2);
}

/* 提示信息 */
.tip-section {
  background: linear-gradient(135deg, #e0e7ff 0%, #c7d2fe 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: flex-start;
}

.tip-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.tip-content {
  flex: 1;
}

.tip-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #4338ca;
  margin-bottom: 10rpx;
}

.tip-desc {
  font-size: 26rpx;
  color: #6366f1;
  line-height: 1.6;
}

/* 表单 */
.form-section {
  margin-bottom: 30rpx;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #374151;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input-wrapper {
  display: flex;
  align-items: center;
  background: #f9fafb;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  border: 2rpx solid #e5e7eb;
  transition: all 0.3s ease;
}

.input-wrapper.focus {
  border-color: #667eea;
  background: #ffffff;
  box-shadow: 0 0 0 4rpx rgba(102, 126, 234, 0.1);
}

.input-wrapper.error {
  border-color: #ef4444;
  background: #fef2f2;
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  color: #9ca3af;
}

.input-wrapper.focus .input-icon {
  color: #667eea;
}

.input-field {
  flex: 1;
  font-size: 30rpx;
  color: #1f2937;
  height: 44rpx;
  line-height: 44rpx;
}

.input-field::placeholder {
  color: #9ca3af;
}

.password-toggle {
  padding: 10rpx;
  font-size: 32rpx;
  color: #9ca3af;
}

.error-tip {
  font-size: 24rpx;
  color: #ef4444;
  margin-top: 10rpx;
  padding-left: 10rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.4);
  margin-top: 40rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn:active {
  transform: translateY(4rpx);
}

/* 成功状态 */
.success-section {
  text-align: center;
  padding: 60rpx 40rpx;
}

.success-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 40rpx;
  font-size: 80rpx;
  box-shadow: 0 20rpx 60rpx rgba(16, 185, 129, 0.3);
  animation: scaleIn 0.5s ease-out;
}

.success-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #059669;
  margin-bottom: 20rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #6b7280;
  line-height: 1.6;
  margin-bottom: 50rpx;
}

.back-login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  border: none;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.4);
}

.back-login-btn::after {
  border: none;
}

/* 动画 */
@keyframes scaleIn {
  0% {
    transform: scale(0);
    opacity: 0;
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.forgot-card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
