.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8ec 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* Filter Section */
.filter-section {
  background: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.filter-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.filter-reset {
  font-size: 26rpx;
  color: #667eea;
  padding: 8rpx 16rpx;
}

.date-picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.date-picker {
  flex: 1;
  background: #f8f8f8;
  border-radius: 16rpx;
  padding: 20rpx;
}

.picker-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.date-separator {
  font-size: 26rpx;
  color: #999;
  margin: 0 20rpx;
}

.search-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 28rpx 0;
  border: none;
}

.search-btn::after {
  border: none;
}

.search-btn:active {
  opacity: 0.9;
  transform: scale(0.98);
}

/* Loading State */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 40rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e0e0e0;
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* Empty State */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 150rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.empty-subtext {
  font-size: 26rpx;
  color: #999;
}

/* Order List */
.list-header {
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.order-count {
  font-size: 26rpx;
  color: #666;
}

.order-card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  transition: transform 0.2s ease;
}

.order-card:active {
  transform: scale(0.98);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.repair-type {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.type-icon {
  font-size: 40rpx;
}

.type-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-badge.completed {
  background: #e8f5e0;
  color: #7ed321;
}

.status-badge.large {
  font-size: 32rpx;
  padding: 12rpx 32rpx;
  border-radius: 32rpx;
}

.card-body {
  margin-bottom: 24rpx;
}

.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  min-width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.info-value.description {
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.time-info {
  display: flex;
  flex-direction: column;
}

.time-label {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.time-value {
  font-size: 24rpx;
  color: #666;
}

.evaluation-badge {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: #fff7e6;
  border-radius: 16rpx;
}

.evaluation-badge .stars {
  color: #f5a623;
  font-size: 24rpx;
}

.evaluation-badge .has-eval {
  font-size: 22rpx;
  color: #f5a623;
}

.evaluation-badge.no-eval {
  background: #f0f0f0;
  color: #999;
  font-size: 22rpx;
}

/* Modal */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
}

.modal-content {
  position: relative;
  background: #fff;
  width: 100%;
  max-height: 85vh;
  border-radius: 40rpx 40rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  font-size: 32rpx;
  color: #999;
}

.modal-body {
  flex: 1;
  padding: 30rpx 40rpx;
  max-height: 60vh;
}

/* Detail Section */
.detail-section {
  padding-bottom: 20rpx;
}

.detail-status-row {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.detail-row {
  margin-bottom: 30rpx;
}

.detail-label {
  display: block;
  font-size: 26rpx;
  color: #999;
  margin-bottom: 12rpx;
}

.detail-value {
  font-size: 30rpx;
  color: #333;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-value.description {
  line-height: 1.8;
  color: #666;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-top: 16rpx;
}

.detail-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  object-fit: cover;
}

/* Evaluation Section */
.evaluation-section {
  margin-top: 40rpx;
  padding-top: 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
}

.evaluation-content {
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 30rpx;
}

.rating-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.rating-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.rating-stars {
  display: flex;
  gap: 8rpx;
  margin-right: 16rpx;
}

.star {
  font-size: 36rpx;
  color: #ddd;
}

.star.filled {
  color: #f5a623;
}

.rating-text {
  font-size: 26rpx;
  color: #f5a623;
  font-weight: 500;
}

.comment-row {
  margin-bottom: 20rpx;
}

.comment-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.comment-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
}

.eval-time {
  font-size: 24rpx;
  color: #999;
}

.no-evaluation {
  margin-top: 40rpx;
  padding: 40rpx;
  text-align: center;
  background: #f8f8f8;
  border-radius: 20rpx;
}

.no-evaluation text {
  font-size: 28rpx;
  color: #999;
}
