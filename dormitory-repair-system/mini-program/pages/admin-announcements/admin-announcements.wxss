.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #1a1a2e 0%, #16213e 100%);
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 100%);
  padding: 50rpx 40rpx 40rpx;
  border-bottom: 4rpx solid #c9a227;
  box-shadow: 0 8rpx 40rpx rgba(201, 162, 39, 0.2);
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
}

.header-subtitle {
  font-size: 26rpx;
  color: #a0a0a0;
  text-align: center;
  margin-top: 16rpx;
}

.action-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  background: rgba(255, 255, 255, 0.03);
  border-bottom: 1rpx solid rgba(201, 162, 39, 0.2);
}

.announcement-count {
  display: flex;
  align-items: center;
}

.count-text {
  font-size: 28rpx;
  color: #a0a0a0;
  font-weight: 500;
}

.create-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #c9a227 0%, #d4af37 100%);
  padding: 20rpx 32rpx;
  border-radius: 36rpx;
  box-shadow: 0 8rpx 24rpx rgba(201, 162, 39, 0.3);
  transition: all 0.3s ease;
}

.create-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 12rpx rgba(201, 162, 39, 0.2);
}

.btn-icon {
  font-size: 32rpx;
  font-weight: 700;
  color: #1a1a2e;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #1a1a2e;
}

.content {
  flex: 1;
  padding: 30rpx;
}

.announcement-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.announcement-card {
  background: linear-gradient(135deg, #252542 0%, #1e1e3a 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  border: 1rpx solid rgba(201, 162, 39, 0.15);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s ease;
}

.announcement-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.4);
  border-color: rgba(201, 162, 39, 0.3);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.announcement-title {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-right: 20rpx;
}

.title-badge {
  background: linear-gradient(135deg, #c9a227 0%, #d4af37 100%);
  color: #1a1a2e;
  font-size: 22rpx;
  font-weight: 700;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.announcement-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.action-btn.edit {
  background: rgba(74, 144, 217, 0.15);
  border: 1rpx solid rgba(74, 144, 217, 0.3);
}

.action-btn.edit:active {
  background: rgba(74, 144, 217, 0.3);
}

.action-btn.delete {
  background: rgba(231, 76, 60, 0.15);
  border: 1rpx solid rgba(231, 76, 60, 0.3);
}

.action-btn.delete:active {
  background: rgba(231, 76, 60, 0.3);
}

.action-icon {
  font-size: 28rpx;
}

.card-body {
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.08);
}

.content-preview {
  font-size: 28rpx;
  color: #b0b0b0;
  line-height: 1.7;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: flex-end;
}

.date-info {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.date-icon {
  font-size: 24rpx;
  opacity: 0.6;
}

.date-text {
  font-size: 24rpx;
  color: #808080;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #808080;
  text-align: center;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(201, 162, 39, 0.2);
  border-top: 6rpx solid #c9a227;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #808080;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(20rpx);
}

.modal-container {
  width: 100%;
  max-height: 85vh;
  background: linear-gradient(180deg, #252542 0%, #1e1e3a 100%);
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
  border-top: 4rpx solid #c9a227;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #808080;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.05);
}

.modal-body {
  padding: 40rpx;
  flex: 1;
  overflow-y: auto;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #c9a227;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 96rpx;
  padding: 0 28rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #ffffff;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #606060;
}

.form-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx 28rpx;
  background: rgba(255, 255, 255, 0.05);
  border: 2rpx solid rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #ffffff;
  line-height: 1.7;
  box-sizing: border-box;
}

.form-textarea::placeholder {
  color: #606060;
}

.char-count {
  text-align: right;
  margin-top: 12rpx;
}

.char-count text {
  font-size: 24rpx;
  color: #606060;
}

.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 30rpx 40rpx 60rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.1);
}

.btn-cancel {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #a0a0a0;
  font-weight: 600;
  transition: all 0.2s ease;
}

.btn-cancel:active {
  background: rgba(255, 255, 255, 0.12);
}

.btn-submit {
  flex: 1;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #c9a227 0%, #d4af37 100%);
  border-radius: 48rpx;
  font-size: 32rpx;
  color: #1a1a2e;
  font-weight: 700;
  box-shadow: 0 8rpx 24rpx rgba(201, 162, 39, 0.3);
  transition: all 0.2s ease;
}

.btn-submit:active:not(.disabled) {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(201, 162, 39, 0.2);
}

.btn-submit.disabled {
  opacity: 0.6;
}

.btn-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(26, 26, 46, 0.3);
  border-top: 4rpx solid #1a1a2e;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}