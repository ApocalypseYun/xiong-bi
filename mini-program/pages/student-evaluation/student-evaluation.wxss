.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.3);
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
  margin-top: 12rpx;
}

.content {
  padding: 30rpx;
}

.order-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #333;
}

.switch-btn {
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 30rpx;
}

.switch-btn text {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.order-info {
  margin-bottom: 24rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #666;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.completion-images {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f5f5f5;
}

.section-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.images-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.completion-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  object-fit: cover;
}

.evaluation-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.08);
}

.rating-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
}

.star-rating {
  display: flex;
  gap: 20rpx;
  margin: 24rpx 0;
}

.star-item {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 16rpx;
  transition: all 0.2s ease;
}

.star-item.active {
  background: linear-gradient(135deg, #ffa500 0%, #ff8c00 100%);
  transform: scale(1.05);
}

.star-item.disabled {
  opacity: 0.7;
}

.star-icon {
  font-size: 48rpx;
  color: #ddd;
  transition: color 0.2s ease;
}

.star-item.active .star-icon {
  color: #ffffff;
}

.rating-text {
  font-size: 28rpx;
  color: #667eea;
  font-weight: 600;
}

.content-section {
  padding-top: 30rpx;
}

.content-input {
  width: 100%;
  height: 240rpx;
  padding: 24rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.7;
  box-sizing: border-box;
  margin-top: 16rpx;
}

.char-count {
  text-align: right;
  margin-top: 12rpx;
}

.char-count text {
  font-size: 22rpx;
  color: #999;
}

.content-display {
  padding-top: 30rpx;
}

.content-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.8;
  display: block;
  background: #f8f9fa;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-top: 16rpx;
}

.eval-time {
  margin-top: 20rpx;
  text-align: right;
}

.eval-time text {
  font-size: 24rpx;
  color: #999;
}

.action-area {
  margin-top: 40rpx;
  padding: 0 20rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 30rpx rgba(102, 126, 234, 0.35);
  transition: all 0.3s ease;
}

.submit-btn.disabled {
  background: #ccc;
  box-shadow: none;
}

.submit-btn:active:not(.disabled) {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(102, 126, 234, 0.25);
}

.empty-order {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.select-btn {
  width: 320rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.3);
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(8rpx);
}

.selector-modal {
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.selector-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #999;
  border-radius: 30rpx;
  background: #f5f5f5;
}

.order-list {
  flex: 1;
  padding: 20rpx 30rpx;
  max-height: 60vh;
}

.selector-order-item {
  background: #f8f9fa;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.selector-order-item:active {
  background: #e8e8e8;
  transform: scale(0.99);
}

.selector-order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.selector-order-type {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}

.completed-badge {
  padding: 6rpx 16rpx;
  background: #e8f5e0;
  color: #7ed321;
  font-size: 22rpx;
  font-weight: 600;
  border-radius: 12rpx;
}

.selector-order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.selector-order-location {
  font-size: 26rpx;
  color: #666;
}

.selector-order-time {
  font-size: 22rpx;
  color: #999;
}

.empty-orders {
  text-align: center;
  padding: 80rpx 40rpx;
  font-size: 28rpx;
  color: #999;
}

.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.85);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(4rpx);
}

.loading-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #667eea;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}
