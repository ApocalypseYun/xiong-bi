.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f6f3 0%, #f0ece5 100%);
  display: flex;
  flex-direction: column;
}

.header {
  background: linear-gradient(135deg, #6b4c3d 0%, #8b6f5c 100%);
  padding: 50rpx 40rpx 40rpx;
  border-bottom: 4rpx solid #d4a574;
  box-shadow: 0 8rpx 40rpx rgba(107, 76, 61, 0.25);
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
  text-align: center;
  letter-spacing: 4rpx;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
}

.header-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  text-align: center;
  margin-top: 16rpx;
}

.stats-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 40rpx 30rpx;
  background: #ffffff;
  margin: -30rpx 30rpx 0;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 30rpx rgba(107, 76, 61, 0.12);
  position: relative;
  z-index: 10;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 700;
  color: #6b4c3d;
}

.stat-label {
  font-size: 24rpx;
  color: #8b7355;
}

.stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent 0%, #d4c8bc 50%, transparent 100%);
}

.filter-bar {
  display: flex;
  padding: 20rpx 30rpx;
  margin-top: 30rpx;
  gap: 16rpx;
  overflow-x: auto;
}

.filter-item {
  padding: 16rpx 32rpx;
  background: #ffffff;
  border-radius: 32rpx;
  border: 2rpx solid #e8e0d8;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.filter-item.active {
  background: linear-gradient(135deg, #6b4c3d 0%, #8b6f5c 100%);
  border-color: #6b4c3d;
}

.filter-text {
  font-size: 26rpx;
  color: #6b5d4d;
  font-weight: 500;
}

.filter-item.active .filter-text {
  color: #ffffff;
}

.content {
  flex: 1;
  padding: 20rpx 30rpx 30rpx;
}

.evaluation-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.evaluation-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 6rpx 24rpx rgba(107, 76, 61, 0.08);
  border: 1rpx solid rgba(212, 165, 116, 0.15);
  transition: all 0.3s ease;
}

.evaluation-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 10rpx 32rpx rgba(107, 76, 61, 0.12);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.order-id {
  font-size: 24rpx;
  color: #a09080;
  font-family: monospace;
}

.user-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #4a4035;
}

.rating-badge {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-weight: 700;
}

.rating-badge.rating-5 {
  background: linear-gradient(135deg, #e8f5e0 0%, #d4edda 100%);
  color: #28a745;
}

.rating-badge.rating-4 {
  background: linear-gradient(135deg, #e6f2ff 0%, #cce5ff 100%);
  color: #007bff;
}

.rating-badge.rating-3 {
  background: linear-gradient(135deg, #fff7e6 0%, #ffe4b3 100%);
  color: #f5a623;
}

.rating-badge.rating-2 {
  background: linear-gradient(135deg, #fff3cd 0%, #ffeeba 100%);
  color: #e67e22;
}

.rating-badge.rating-1 {
  background: linear-gradient(135deg, #f8d7da 0%, #f5c6cb 100%);
  color: #dc3545;
}

.rating-text {
  font-size: 28rpx;
}

.card-body {
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0ebe5;
}

.rating-display {
  display: flex;
  align-items: center;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.stars {
  display: flex;
  gap: 8rpx;
}

.stars.large {
  gap: 12rpx;
}

.star {
  font-size: 36rpx;
  color: #ddd5cc;
}

.stars.large .star {
  font-size: 48rpx;
}

.star.filled {
  color: #ffa500;
}

.rating-label {
  font-size: 26rpx;
  color: #8b7355;
  font-weight: 500;
}

.content-preview {
  background: #faf8f5;
  padding: 20rpx;
  border-radius: 12rpx;
  border-left: 4rpx solid #d4a574;
}

.content-text {
  font-size: 28rpx;
  color: #5a5045;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
}

.eval-time {
  font-size: 24rpx;
  color: #a09080;
}

.view-detail {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.view-text {
  font-size: 26rpx;
  color: #6b4c3d;
  font-weight: 500;
}

.view-arrow {
  font-size: 32rpx;
  color: #6b4c3d;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 160rpx 60rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 36rpx;
  color: #4a4035;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.empty-subtext {
  font-size: 26rpx;
  color: #8b7355;
  text-align: center;
}

.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid rgba(107, 76, 61, 0.1);
  border-top: 6rpx solid #6b4c3d;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #8b7355;
}

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  z-index: 1000;
  backdrop-filter: blur(20rpx);
}

.modal-container {
  width: 100%;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 40rpx 40rpx 0 0;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease-out;
  border-top: 4rpx solid #d4a574;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0ebe5;
}

.modal-header-left {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #4a4035;
}

.modal-order-id {
  background: #f5f0eb;
  padding: 8rpx 20rpx;
  border-radius: 12rpx;
}

.modal-order-id text {
  font-size: 24rpx;
  color: #8b7355;
  font-family: monospace;
}

.close-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #a09080;
  border-radius: 32rpx;
  background: #f5f0eb;
}

.modal-body {
  padding: 40rpx;
  flex: 1;
  overflow-y: auto;
}

.detail-section {
  margin-bottom: 40rpx;
}

.detail-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f5f0eb;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #8b7355;
}

.detail-value {
  font-size: 28rpx;
  color: #4a4035;
  font-weight: 500;
}

.detail-rating {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.rating-score {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffa500;
}

.rating-label-5 { color: #28a745; }
.rating-label-4 { color: #007bff; }
.rating-label-3 { color: #f5a623; }
.rating-label-2 { color: #e67e22; }
.rating-label-1 { color: #dc3545; }

.content-section {
  background: #faf8f5;
  border-radius: 20rpx;
  padding: 30rpx;
}

.content-section.empty-content {
  background: #f5f0eb;
}

.section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4a4035;
  margin-bottom: 20rpx;
}

.content-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  border-left: 4rpx solid #d4a574;
}

.content-full {
  font-size: 30rpx;
  color: #5a5045;
  line-height: 1.8;
}

.no-content-text {
  font-size: 28rpx;
  color: #a09080;
  font-style: italic;
  text-align: center;
  padding: 40rpx 0;
}